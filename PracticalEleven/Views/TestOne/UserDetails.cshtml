@model User
@{
    ViewData["Title"] = "User Details Page";
}

<h1 class="display-4 text-center">User Details</h1>
<div class="d-flex justify-content-center">
    <div class="border border-2 border-dark w-50 text-center p-4 m-3">
        <div class="d-flex align-items-center justify-content-between">
            <h5><i class="fa fa-solid fa-user me-2"></i>@Html.DisplayFor(user => Model.Name)</h5>
            <h5><i class="fa fa-solid fa-calendar me-2"></i>@Html.DisplayFor(user => Model.DOB)</h5>
            <h5><i class="fa fa-solid fa-map-marker me-2"></i> @Html.DisplayFor(user => Model.Address)</h5>
        </div>
        <hr />
        <div class="d-flex justify-content-center">
            <a class="btn btn-outline-info me-3" asp-controller="TestOne" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-user-pen"></i> Edit User </a>
            <a class="btn btn-outline-secondary" onclick="return confirm('Are you sure you want to delete this?')" asp-controller="TestOne" asp-action="Delete" asp-route-id="@Model.Id"><i class="fa fa-trash"></i> Delete User</a>
        </div>
    </div>
</div>
